{
  "name": "api-gateway - Node.js Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "NODE_ENV": "development"
    }
  },
  "workspaceFolder": "/workspace/api-gateway",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/api-gateway,type=bind,consistency=cached",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "orta.vscode-jest",
        "eg2.vscode-npm-script",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [3000, 10410],
  "postCreateCommand": "yarn install && yarn build --if-present",
  "postStartCommand": "yarn start:dev --silent",
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
